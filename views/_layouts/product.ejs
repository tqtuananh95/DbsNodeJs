<%- include('../fragments/header'); -%>
<h1 class="page-header"><%= p.title %></h1>
<hr>
<div class="row">
  <div class="col-xs-12 col-md-5">
    <img class="spi" src="/product_image/<%= p._id %>/<%= p.image %>" alt="">
  </div>
  <div class="col-xs-12 col-md-7">
    <p><%- p.desc %></p>
    <p>$<%= parseFloat(p.price).toFixed(2) %></p>
    <p><a href="/cart/add/<%= p.slug %>">Add to cart</a></p>
  </div>
  <div class="col-xs-12">
    <ul class="gallery">
      <% galleryImages.forEach(function(image) { %> 
        <% if (image != "thumbs") { %> 
          <li>
            <a data-fancybox="gallery" href="/product_image/<%= p._id %>/gallery/<%= image %>">
              <img src="/product_image/<%= p._id %>/gallery/thumbs/<%= image %>" alt="">
            </a>
          </li>
        <% } %>
      <% }); %>
    </ul>
  </div>
</div>
<%- include('../fragments/footer'); -%>